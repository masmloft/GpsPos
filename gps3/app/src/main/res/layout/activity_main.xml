<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="563dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="42dp">

        <TextView
            android:id="@+id/tvEnabledGPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tvEnabledGPS"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvStatusGPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tvStatusGPS"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvLocationGPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="textViewStatusGPS"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewSatCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="textViewSatCount" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>