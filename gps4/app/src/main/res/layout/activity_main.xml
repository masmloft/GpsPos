<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickButtonStop"
        android:text="buttonStop"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvEnabledGPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tvEnabledGPS"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textViewSatCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="textViewSatCount"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationGPS"
        tools:layout_editor_absoluteX="-16dp" />

    <TextView
        android:id="@+id/tvLocationGPS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="textViewStatusGPS"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvEnabledGPS"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickButtonStart"
        android:text="buttonStart"
        app:layout_constraintBottom_toTopOf="@+id/buttonStop"
        tools:layout_editor_absoluteX="-206dp" />

</androidx.constraintlayout.widget.ConstraintLayout>